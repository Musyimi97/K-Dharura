<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorAccent"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/ScrollView">


    <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
            >
                <ImageButton
                        android:src="@drawable/i_camera"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" android:scaleType="centerInside"
                        android:id="@+id/ambulance" android:contentDescription="@string/app_name"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="@string/photo_mail"
                          android:id="@+id/ammbulanceText" android:contentDescription="@string/app_name"
                          android:textAlignment="center"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
            >
                <ImageButton
                        android:src="@drawable/i_camera"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" android:scaleType="centerInside"
                        android:id="@+id/police" android:contentDescription="@string/app_name"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Photo Mail"
                          android:id="@+id/policeText" android:contentDescription="@string/app_name"
                          android:textAlignment="center"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
            >
                <ImageButton
                        android:src="@drawable/i_camera"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" android:scaleType="centerInside"
                        android:id="@+id/fire" android:contentDescription="@string/app_name"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Photo Mail"
                          android:textAlignment="center"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

