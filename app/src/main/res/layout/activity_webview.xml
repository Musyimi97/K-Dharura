<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WebviewActivity">


    <android.support.v7.widget.CardView
            android:layout_width="395dp"
            android:layout_height="214dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"


            app:layout_constraintHorizontal_bias="1.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <ImageView
                android:src="@drawable/i_health"
                android:layout_width="match_parent"
                android:layout_height="131dp" android:id="@+id/imageView" android:scaleType="fitCenter"/>
            <Button
                    android:layout_marginLeft="100dp"
                    android:text="Edit Health Details"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content" android:id="@+id/button" android:textSize="14sp"
                    android:textColor="@android:color/background_light" android:background="@color/colorPrimaryDark"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>








</android.support.constraint.ConstraintLayout>