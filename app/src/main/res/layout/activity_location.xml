<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Location">

    <Button
            android:text="Hospital"
            android:layout_width="234dp"
            android:layout_height="0dp"
            android:id="@+id/hospital"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginTop="43dp" android:layout_marginBottom="116dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/clinics"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Clinics"
            android:layout_width="223dp"
            android:layout_height="0dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/clinics"
            app:layout_constraintTop_toBottomOf="@+id/hospital" android:layout_marginBottom="128dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/car_garage"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="219dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:id="@+id/car_garage"
            app:layout_constraintTop_toBottomOf="@+id/clinics" android:layout_marginBottom="283dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>