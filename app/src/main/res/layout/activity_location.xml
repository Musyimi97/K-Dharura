<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Location" android:background="@drawable/maps">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cardview1"
                android:focusableInTouchMode="true" android:focusable="auto">

            <Button
                    android:background="@drawable/round"
                    android:layout_marginBottom="64dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/hospital"
                    android:textColor="@android:color/white"
                    style="@style/Widget.AppCompat.Button"
                    tools:layout_editor_absoluteY="43dp" tools:layout_editor_absoluteX="104dp"
                    android:gravity="center"/>
            <TextView
                    android:text="@string/click_the_button_below_to_display_hospitals_around_you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1" android:textAlignment="center"
                    android:contentDescription="@string/app_name" android:textSize="18sp" android:lineSpacingExtra="8sp"
                    android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cardview2">
        <Button

                android:layout_marginBottom="64dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="64dp"
                android:text="@string/police_stations"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:background="@drawable/round"
                android:id="@+id/clinics"
                tools:layout_editor_absoluteY="202dp" tools:layout_editor_absoluteX="78dp"
                android:contentDescription="@string/app_name"/>
        <TextView
                android:text="@string/click_the_button_below_to_view_available_police_stations_in_your_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="18sp"
                android:textAlignment="center" android:textStyle="bold"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/cardview3">

        <Button
                android:background="@drawable/round"
                android:layout_marginBottom="64dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="64dp"
                android:text="@string/car_garage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:id="@+id/car_garage"
                tools:layout_editor_absoluteY="373dp" tools:layout_editor_absoluteX="80dp"
                android:contentDescription="@string/app_name"/>
        <TextView
                android:text="@string/click_the_button_below_to_view_car_garages_around_your_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:contentDescription="@string/app_name" android:textAlignment="center" android:textStyle="bold"
                android:textSize="18sp"/>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>