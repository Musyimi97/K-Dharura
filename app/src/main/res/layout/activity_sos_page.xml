<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/ScrollView">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:id="@+id/linearLayout" android:gravity="center">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/tow1" android:id="@+id/tow1"
                android:contentDescription="@string/app_name"/>

        <TextView
                android:text="@string/central_motors_limited_contacts_254_720_441250_735_204887_772_784798_area_nairobi_and_environs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tow1textView" android:textAlignment="center"
                android:contentDescription="@string/app_name" android:textColor="@color/colorPrimary"/>
        <Button
                android:text="@string/visit_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tow1Button"
                android:contentDescription="@string/app_name" android:onClick="breakdownPageActivity"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/tow2" android:id="@+id/tow2"
                android:contentDescription="@string/app_name"/>

        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/tow3" android:id="@+id/tow3"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/tow4" android:id="@+id/tow4"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/tow5" android:id="@+id/tow5"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown1" android:id="@+id/breakdown1"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown2" android:id="@+id/breakdown2"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown3" android:id="@+id/breakdown3"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown4" android:id="@+id/breakdown4"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown5" android:id="@+id/breakdown5"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown6" android:id="@+id/breakdown6"
                android:contentDescription="@string/app_name"/>
        <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" app:srcCompat="@drawable/breakdown7" android:id="@+id/breakdown7"
                android:contentDescription="@string/app_name"/>
    </LinearLayout>


</ScrollView>
